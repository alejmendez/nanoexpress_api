{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",

    "paths": {
      "@core/*": ["src/core/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@modules/*": ["src/modules/*"]
    },

    /* Modules */
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
  }
}
