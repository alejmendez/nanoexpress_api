{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@modules/*": ["src/modules/*"]
    },
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  }
}
