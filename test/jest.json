{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@core/(.*)$": ["<rootDir>/../src/core/$1"],
    "^@middlewares/(.*)$": ["<rootDir>/../src/middlewares/$1"],
    "^@exceptions/(.*)$": ["<rootDir>/../src/exceptions/$1"],
    "^@modules/(.*)$": ["<rootDir>/../src/modules/$1"]
  }
}
